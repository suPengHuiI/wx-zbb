/**index.wxss**/
.nav{
  width: 100%;
  height: 100rpx;
  position: fixed;
  top:0;
  left: 0;
  display: flex;
  z-index: 666;
  justify-content: space-around;
  align-items: center;
  background-color: #f0f0f0;
}
.nav view{
  height: 100%;
  display: flex;
  align-items: center;
  font-size:32rpx;
  color: #242424;
}
.nav view text{
  height: 80rpx;
  line-height: 80rpx;
  display: block;
}
.search{
  display: flex;
  justify-content: center;
  padding: 0 !important;
  height: 50rpx !important;
  border-left: 1px solid #c0c0c0;
}
.search image{
  width:60rpx;
  height: 60rpx;
  margin-left:10rpx;
}
.active{
  color:#242424;
  font-weight: bold;
  border-bottom:6rpx solid #ca4341;
}