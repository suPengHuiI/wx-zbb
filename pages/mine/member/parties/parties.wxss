/* pages/mine/member/parties/parties.wxss */
.item{
  padding: 0 20rpx;
  font-size: 34rpx;
}
.active{
  color:#323232;
  font-weight: bold;
  border-bottom:6rpx solid #ca4341;
}
.lists-item{
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
}
image{
  width: 50rpx;
  height: 50rpx;
}
.line{
  margin-left:24rpx;
  width:2px;
  min-height:54rpx;
  background-color:#f0f0f0;
}
.days{
  display: flex;
  font-size:32rpx;
  position: relative;
}
.days .content{
  width:500rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding:6rpx 0 0 40rpx;
  color:#646464;
}
.time{
  font-size: 28rpx;
  position: absolute;
  font-weight: bold;
  right: 0;
  padding-top:6rpx;
  color:#646464;
}