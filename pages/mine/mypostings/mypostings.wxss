/* pages/mine/mypostings/mypostings.wxss */
.postings{
  width: 100%;
  height: 100%;

}
.item{
  display: flex;
  justify-content: space-around;
  padding:20rpx;
  border-bottom: 1px solid #f0f0f0;
}
.item>view:nth-child(1){
  width: 140rpx;
  display: flex;
  justify-content: space-between;
}
.item>view:nth-child(1) text:nth-child(1){
  font-size: 60rpx;
}
.item>view:nth-child(1) text:nth-child(2){
  font-size: 30rpx;
  padding-top: 30rpx;
}
.item-img{
  width: 150rpx;
  height: 150rpx;
}
.item>view:nth-child(3){
  width: 360rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content{
  font-size: 28rpx;
  line-height: 40rpx;
  color:#323232;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.type{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.type>view:nth-child(1){
  font-size: 20rpx;
  color:#3c94df;
}
.likes-shares{
  display: flex;
}
.likes-shares view{
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cur{
  border: none !important;
}
.type text{
  display: inline-block;
  height: 30rpx;
  line-height: 30rpx;
  padding-right: 20rpx;
  border-right: 1px solid #bfbfbf;
  color:#868686;
  font-size: 24rpx;
}
.type image{
  width: 40rpx;
  height: 40rpx;
}