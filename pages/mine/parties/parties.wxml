<!--pages/mine/parties/parties.wxml-->
<view class='parties'>
  <form bindsubmit="toPay">
    <input hidden='{{true}}' name="userID" value='{{userID}}'></input>
    <view class='time'>
      <label>时间：</label>
      <view>{{date}}</view>
    </view>
    <view class='time'>
      <label>姓名：</label>
      <view>{{userName}}</view>
    </view>
    <view class='time'>
      <label>身份证号码：</label>
      <view>{{uid}}</view>
    </view>
    <view class='time'>
      <label>缴费金额：</label>
      <view>
        <input name="payDues" type='number' placeholder='请输入缴费金额'></input>
      </view>
    </view>
    <button form-type="submit" class='btn'>提交</button>
  </form>
</view>
