/* pages/mine/mymessage/mymessage.wxss */
.messages{
  width: 100%;
  height: 100%;
  border-top:2px solid #f0f0f0;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.title{
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  padding: 40rpx 0 30rpx 0;
}
.title-content{
  width: 480rpx;
  font-weight: bold;
  color:#323232;
  font-size: 34rpx;
}
.title image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.time{
  position: absolute;
  top:50rpx;
  right: 0;
  font-size: 30rpx;
  color:#868686;
}
.content{
  width: 100%;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size:32rpx;
}
.content view{
  width: 100%;
  min-height: 160rpx;
  padding: 25rpx 20rpx 20rpx 40rpx;
  box-sizing: border-box;
  color:#868686;
  background-color: #f0f0f0;
}