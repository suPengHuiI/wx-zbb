/* pages/mine/studyArticle/studyArticle.wxss */
@import "../../../wxParse/wxParse.wxss";
.articlelists{
  width: 100%;
  border-top:3px solid #f0f0f0;
}
.item{
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
}
.item>view{
  width: 100%;
}
.title{
  width: 90%;
  color: #323232;
  font-size:32rpx;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.from{
  font-size:30rpx;
  color:#909090;
}
.from text:nth-child(2){
  padding-left: 60rpx;
}