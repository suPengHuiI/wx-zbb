/* pages/group/setting/changeinfo/changeinfo.wxss */
.changeinfo{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-top: 1px solid #f0f0f0;
}
.info{
  padding:30rpx 0 15rpx 0;
  font-size:32rpx;
  color:#323232;
  display: flex;
  align-items: center;
  border-bottom:1rpx solid #f0f0f0;
}
.info label{
  width:170rpx;
}
.info input{
  padding-left:30rpx;
}
.btn{
  width: 650rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color:#ca4341;
  border-radius: 10rpx;
  font-size: 38rpx;
  font-weight: bold;
  margin-top:200rpx;
  color:#fff;
  margin-bottom: 100rpx;
}