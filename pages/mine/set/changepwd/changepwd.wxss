/* pages/group/setting/changepwd/changepwd.wxss */
.changepwd{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-top:1px solid #f0f0f0;
}
.active{
  margin-top:40rpx;
}
.info{
  padding:30rpx 0 15rpx 0;
  font-size:32rpx;
  color:#323232;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:1rpx solid #f0f0f0;
}
input{
  text-align: right;
}
.showErr{
  color:#ff4c34;
  font-size:30rpx;
  line-height: 40rpx;
  margin-bottom:20rpx;
}
.btn{
  width: 650rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color:#ca4341;
  border-radius: 10rpx;
  font-size: 38rpx;
  font-weight: bold;
  margin-top:200rpx;
  color:#fff;
  margin-bottom: 100rpx;
}